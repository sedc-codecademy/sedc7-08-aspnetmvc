@model HomeViewModel
@{ 
    ViewBag.Title = "Welcome";
}
<div class="jumbotron">
    <h1>Welcome to PizzApp</h1>
    <p>The best pizza application in the whole universe!</p>
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-3">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-danger" type="submit">Order</button>
                    </span>
                    @Html.TextBoxFor(x => x.NumberOfPizzas, new { @class = "form-control" })
                    @*<input type="text" class="form-control" placeholder="Search for...">*@
                </div>
            </div>
        </div>
    }
</div>





































