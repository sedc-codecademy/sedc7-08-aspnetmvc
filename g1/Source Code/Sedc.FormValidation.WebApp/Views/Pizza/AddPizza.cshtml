@model Pizza
@{
    ViewData["Title"] = "AddPizza";

    var pizzaStyles = new SelectList(new[]
    {
        "Neapolitan",
        "New Heaven",
        "Grandma Style",
        "New York Style",
        "Pan Style",
    });
}

<h2>Add Pizza</h2>
<form asp-action="AddPizza" method="post">
    <div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" style="color: red;"></span>
        </div>

        <div>
            <label asp-for="Description"></label>
            <input asp-for="Description"/>
            <span asp-validation-for="Description" style="color: red;"></span>
        </div>

        <div>
            <label asp-for="Style"></label>
            <select asp-for="Style" asp-items="pizzaStyles"></select>
            <span asp-validation-for="Style" style="color: red;"></span>
        </div>

        <div>
            <label asp-for="Ingredients"></label>
            <input asp-for="Ingredients" />
            <span asp-validation-for="Ingredients" style="color: red;"></span>
        </div>

        <div>
            <label asp-for="Allergens"></label>
            <input asp-for="Allergens" />
            <span asp-validation-for="Allergens" style="color: red;"></span>
        </div>

        <div>
            <label asp-for="IsVegan"></label>
            <input asp-for="IsVegan" />
            <span asp-validation-for="IsVegan" style="color: red;"></span>
        </div>

        <div>
            <label asp-for="IsFasting"></label>
            <input asp-for="IsFasting" />
            <span asp-validation-for="IsFasting" style="color: red;"></span>
        </div>

        <div>
            <label asp-for="IsHalal"></label>
            <input asp-for="IsHalal" />
            <span asp-validation-for="IsHalal" style="color: red;"></span>
        </div>

        <div>
            <label asp-for="IsKosher"></label>
            <input asp-for="IsKosher" />
            <span asp-validation-for="IsKosher" style="color: red;"></span>
        </div>

        <div>
            <label asp-for="Price"></label>
            <input asp-for="Price" />
            <span asp-validation-for="Price" style="color: red;"></span>
        </div>
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>
</form>

@if (ViewBag.Message != null)
{
    <h4>@ViewBag.Message</h4>
}
