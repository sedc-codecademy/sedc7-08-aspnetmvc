@model PizzaHouse.ViewModels.PizzaViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create new pizza</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="Pizza">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedIngredients" class="control-label"></label>
                <select asp-for="SelectedIngredients" asp-items="Model.AllIngredients" class="form-control"></select>
                <span asp-validation-for="SelectedIngredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasePrice" class="control-label"></label>
                <input asp-for="BasePrice" class="form-control" />
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>
            <input type="submit" value="Create" class="btn btn-primary" />
        </form>
    </div>
</div>