@model Sedc.G2.PizzApp.Models.PizzaPriceViewModel

@{
    ViewData["Title"] = "AddPizzaPrice";
}

<h2>AddPizzaPrice</h2>

<h4>AddPizzaPriceViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPizzaPrice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PizzaId" class="control-label"></label>
                @Html.DropDownListFor(m => m.PizzaId, Model.Pizzas)
                <span asp-validation-for="PizzaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeId" class="control-label"></label>
                @Html.DropDownListFor(m => m.SizeId, Model.Sizes)
                <span asp-validation-for="SizeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="index">Back to List</a>
</div>

