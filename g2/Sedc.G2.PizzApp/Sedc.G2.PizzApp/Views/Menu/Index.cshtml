@model List<PizzaModel>
@{
    ViewData["Title"] = "Menu";
}

<h2>Index</h2>

<div class="body-content">
    @foreach (var pizza in Model)
    {
        <div class="form-control">Name: @pizza.Name (@pizza.Size) - @Html.ActionLink("details", "PizzaDetails", new { id = pizza.Id })</div><br />
    }
</div>