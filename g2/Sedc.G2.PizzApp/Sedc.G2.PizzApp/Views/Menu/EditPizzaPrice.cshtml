@model PizzaPriceViewModel

@{
    ViewData["Title"] = "EditPizzaPrice";
}

<h2>EditPizzaPrice</h2>

<h4>PizzaSizeModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPizzaPrice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.PizzaId)
            @Html.HiddenFor(m => m.SizeId)
            <div class="form-group">
                @Html.Label("Pizza: " + Model.Pizzas.FirstOrDefault(x => x.Value == Model.PizzaId.ToString()).Text)
            </div>
            <div class="form-group">
                @Html.Label("Size: " + Model.Sizes.FirstOrDefault(x => x.Value == Model.SizeId.ToString()).Text)
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

