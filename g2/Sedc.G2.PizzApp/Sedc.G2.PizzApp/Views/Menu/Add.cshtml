@model PizzaModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

@using (@Html.BeginForm("Add", "Menu", FormMethod.Post))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Id, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Id, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Id, "", new { @class = "label-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "label-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
        @Html.TextAreaFor(m => m.Description, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Price, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Size, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Size, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Size)
    </div>
    <input value="Save" type="submit" />
}